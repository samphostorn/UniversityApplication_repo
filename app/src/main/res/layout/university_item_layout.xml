<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgUniversity_item"
            android:layout_width="99dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home_univer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/Un_name_eng"
                android:layout_width="269dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="item 1"
                android:textColor="#73C1E4"
                android:textSize="18dp"
               />

            <TextView
                android:id="@+id/Un_name_kh"
                android:layout_width="271dp"
                android:layout_height="41dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="32dp"
                android:text="title1"
                android:textColor="#379BC9"
                android:textSize="18dp"
                 />

            <TextView
                android:id="@+id/tvUn_Link"
                android:layout_width="283dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:hint="University Link Website "

                android:textColorHint="#0D2EDF"
                android:textSize="18sp"
                 />

        </LinearLayout>

    </LinearLayout>







</android.support.v7.widget.CardView>