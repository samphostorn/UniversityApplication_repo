<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgUniver"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home_univer" />


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@id/imgUniver"
            android:layout_alignParentStart="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="2dp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvTitleKhmer"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="2dp"

            android:textColor="#000"

            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/tvUnover_Link"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="2dp"
            android:hint="University Link Website"
            android:textColorHint="#2A44D6"
            android:textSize="18sp"
             />


    </LinearLayout>







    </android.support.v7.widget.CardView>